article
	position relative
	transition .3s ease
	overflow hidden

	a:after
		content ""
		cover(absolute)
		z-index 2

	.article__bg
		cover(absolute)

	.article__title
		font-weight 500
		margin-bottom 10px
		color black

	.article__description
		margin-bottom 10px
		opacity .5

	&.article--box
		background-color $dark
		border 1px solid rgba(255, 255, 255, .5)
		text-align center
		box-shadow 0px 2px 65px -15px rgba(0,0,0,0.75)
		z-index 1
		.article__bg
			transition .5s
			z-index -1
		.article__space
			height 180px
			@media $break-md
				height 200px
		.article__button
			margin 0 20px
			text-align right
			border-top 1px solid rgba(255, 255, 255, .5)
		&:hover
			.article__bg
				transform scale(1.1)

	&.article--product
		background-color white
		padding 15px
		border-radius 1px
		box-shadow $shadow

		.article__img
			float left
			width 100px
			height 100px
			line-height 100px
			text-align center
			margin-right 15px
			opacity 0
			&.loaded
				opacity 1
				animation fadeIn .5s ease
			img
				display inline-block
				vertical-align middle
				max-width 100%
				max-height 100px

		.article__body
			color black
			line-height 15px
			height 80px
			overflow hidden

		.article__category
			font-size $global-size-xxs
			opacity .3
			margin-bottom 5px

		.article__title
			font-size $global-size
			line-height 15px
			opacity .7
			a
				color $dark
				display block
				padding 0

		.article__price
			font-size $global-size-xs
			opacity .5

		.article__footer
			overflow hidden
			padding-top 5px
			border-top 1px solid $lighter
			.article__btn
				margin -12px 0
				float right

		&.article--min
			.article__img
				width 80px
				height 80px
				line-height 80px
				img
					max-height 80px
			.article__footer
				display none


	&.article--news
		position relative
		display inline-block
		overflow hidden
		width 100%
		height 230px
		@media $break-md
			width 100%
			min-height 260px
		.article__grad
			cover(absolute)
			grad($dark,bottom)
		.article__bg
			transition .5s
		.article__content
			position absolute
			left 0
			bottom 0
			width 100%
			padding 20px
			.article__title
				color white
				line-height 20px
				font-weight 100
				font-size 15px
				margin-bottom 0px
				@media $break-md
					font-size 22px
					line-height 26px
			.btn
				float none
				text-align left
		&:hover
			.article__bg
				transform scale(1.1)

	&.article--format
		display inline-block
		padding 10px
		@media $break-md
			padding 15px
		&:nth-child(1)
			padding-left 0px
		.article__icon
			text-align center
			filter grayscale(1)
			transition .2s ease
			opacity .5
			display block
			margin 0 auto
			margin-bottom 10px
			img
				width 35px
		&:hover
			.article__icon
				filter grayscale(0)
				opacity 1
		.article__name
			opacity .5



	&.article--company
		background-color white
		padding 15px
		border-radius 1px
		box-shadow $shadow

		.article__logo
			float left
			width 140px
			margin-right 15px

		.article__body
			line-height 16px
			overflow hidden

			.article__title
				margin-bottom 0px

			.article__description
				font-size $global-size-xxs
				margin-bottom 0px

			span
				position absolute
				top 22px
				right 20px
				color $gray

	&.article-list-item
		padding 5px 15px
		overflow hidden
		border-bottom 1px solid $lighter
		user-select none
		animation fadeIn .5s ease backwards
		animation-stagger 20, .1s, .2s
		cursor pointer
		&:last-child
			border-bottom 0px

		.article-check
			float left
			circle 25px
			background-color $light
			opacity .5
			color transparent
			margin 10px 10px 10px 0
			font-size $global-size-sm
			transition .2s ease

		&.selected
			.article-check
				background-color $color
				color white
				opacity 1
				.fa
					animation slideFadeDown .2s ease backwards

		.article-title
			color $gray
			text-overflow ellipsis
			padding 10px 0
			input
				margin -10px 0
				border 0
				padding 10px 0
				color $gray
				&::placeholder
					color $gray
					opacity .7


	&.article-list-document
		padding 10px 15px
		overflow hidden
		border-bottom 1px solid rgba(white,2.5%)
		user-select none
		animation fadeIn .5s ease backwards
		animation-stagger 20, .1s, .2s
		.article-image
			img
				width 30px
		.article-title
			color $dark
		.article-description
			color $dark
			opacity .5
		.article-button
			display inline-block
			float right




	&.article--cart

		.article__body
			height auto

		.article__form
			position relative
			z-index 4
			margin-top 10px
			textarea
				height 70px

		.article__title
			margin-bottom 5px

		.article__remove
			position absolute
			top 0
			right 0
			padding 15px 20px
			opacity .2
			transition .2s ease
			&:hover
				cursor pointer
				opacity 1
				color $color



	&.article--project
		background-color white
		padding 20px
		border-radius $rad
		box-shadow $shadow

		.article__images
			margin-bottom 20px

		.article__body
			@media $break-sm
				height 100px

		.article__img
			height 100px
			line-height 100px
			text-align center
			border 1px solid $lighter
			padding 10px 0
			img
				max-height 80px

		.article__title
			title(h4)
			a
				color $dark

		.article__btn
			margin -10px 0

