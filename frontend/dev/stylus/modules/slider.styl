
.slider
	position relative
	//animation fadeIn 2s
	overflow hidden

	.slider-slides
		position relative
		overflow hidden

	.slide
		position relative
		overflow hidden
		display none
		&.slide-current
			display block
			z-index 1
		&.slide-out
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			display block
			z-index 2


	.slider-bullets
		display none
		position absolute
		bottom 10px
		z-index 3
		width 100%
		text-align center

		.slider-bullets-limit
			max-width $limit
			margin 0 auto
			padding 0 20px
			@media $break-md
				padding 0 40px

		.slider-bullet
			width 8px
			height 8px
			border-radius 50%
			background $color
			display inline-block
			margin 0 2px
			transition .2s ease
			opacity .25
			&.slider-bullet-current
				opacity .75
			&:hover
				cursor pointer


	.slider-navigation
		display none
		.slider-nav
			position absolute
			top 39%
			background transparent
			color black
			opacity .5
			z-index 3
			width 50px
			height 80px
			margin-top (@height / -2)
			line-height @height
			border 0
			text-align center
			font-size 150%
			//display none
			transition .2s ease
			@media $break-md
				top 45%
				font-size 300%
				display block
			&.slider-nav-left
				left -5px
				padding-left 5px
				z-index 50
				@media $break-md
					left 30px
			&.slider-nav-right
				right -5px
				padding-right 5px
				z-index 50
				@media $break-md
					right 30px

			&:hover
				cursor pointer
				opacity 1
				background white



	&.slider-dir-left
	&.slider-dir-right
		.slide
			&.slide-current
				animation fadeIn .5s $cb
			&.slide-out
				animation fadeOut .5s $cb both

	&.slider--cover
		cover(absolute)
		.slider-slides
			cover(absolute)
		.slide
			cover(absolute)


