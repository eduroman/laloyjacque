
// Fade

@keyframes fadeIn
	0%
		opacity 0

@keyframes fadeOut
	100%
		opacity 0



// Slide Up

@keyframes slideUp
	0%
		transform translateY(100%)
@keyframes slideUp2
	0%
		opacity 0
		transform translate3d(-154px, -70px,0px)
	50%
		opacity 0
		transform translate3d(-154px, -70px,0px)		
@keyframes slideFadeUp
	0%
		transform translateY(20px)
		opacity 0
@keyframes slideUpOut
	100%
		transform translateY(-100%)



// Slide Down

@keyframes slideDown
	0%
		transform translateY(-300%)
@keyframes slideFadeDown
	0%
		transform translateY(-20px)
		opacity 0
@keyframes slideDownOut
	100%
		transform translateY(100%)



// Slide Left

@keyframes slideLeft
	0%
		opacity 0
		transform translateX(25%)
@keyframes slideFadeLeft
	0%
		transform translateX(20px)
		opacity 0
@keyframes slideLeftOut
	100%
		transform translateX(-100%)



// Slide Right

@keyframes slideRight
	0%
		opacity 0
		transform translateX(-25%)
@keyframes slideRight2
	0%
		opacity 0
		transform translateX(-10%)
	50%
		opacity 0
		transform translateX(-20%)			
@keyframes slideFadeRight
	0%
		transform translateX(-20px)
		opacity 0
@keyframes slideRightOut
	100%
		transform translateX(100%)




// Scale

@keyframes scaleIn
	0%
		transform scale(0)

@keyframes scaleIn2
	0%
		left 0px
	100%
		left -725px	

@keyframes scaleIn3
	0%
		left 0px
	100%
		left -950px			

@keyframes scaleFadeIn
	0%
		transform scale(1.2)
		opacity 0

@keyframes scaleOut
	100%
		transform scale(0)

@keyframes scaleFadeOut
	100%
		transform scale(.8)
		opacity 0



// Rotate

@keyframes rotate360
	0%
		transform rotate(-360deg)



@keyframes shake
	0%
		opacity 0
		transform translateX(0px)
	20%
		opacity 1
		transform translateX(-10px)
	40%
		opacity 1
		transform translateX(10px)
	60%
		opacity 1
		transform translateX(-5px)
	80%
		opacity 1
		transform translateX(2px)
	100%
		opacity 1
		transform translateX(0)


// Bounce
@keyframes bounceIn
	0%
		transform scale(0)
	50%
		transform scale(0)	
	60%
		transform scale(1.1)
	70%
		transform scale(.9)
	80%
		transform scale(1.03)
	90%
		transform scale(.97)
	100%
		opacity 1
		transform scale(1)