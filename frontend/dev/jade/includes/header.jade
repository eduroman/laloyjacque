
header

	.header__bar

		.header__wrap

			a.header__logo(href="index.html")
				img(src="img/logo-bimtool.png")

			.header__right
				.header__search
					form(action="#" method="get")
						span.fa.fa-search
						input(type="text" name="s" placeholder="Buscar...")
				.header__option
					a.header__option__search
						span.fa.fa-search
					a.header__option__cart(href="cart.html")
						span.fa.fa-shopping-cart
					a.header__option__country
						span.fa.fa-globe
						ul
							li
								a(href="#")
									img(src="img/chile.png")
							li
								a(href="#")
									img(src="img/colombia.png")
	
				.header__login(modal-open=".modal--login")
					a(href="#")
